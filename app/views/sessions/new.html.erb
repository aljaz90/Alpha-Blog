
<h1 align="center">Log In</h1>
<div class="login-page">
  <div class="form">
    <%= form_for(:session, :html => {class: "login-form", role: "form"}, url: login_path) do |f| %>
      <%= f.email_field :email, class: "form-input", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-input", placeholder: "Password" %>
      <%= f.submit "Log In", class: 'form-button' %>
      <p class="message">Not registered? <a href="/signup">Create an account</a></p>
    <% end %>
  </div>
</div>